/* custom-tab-bar/custom-ta.wxss */
@import "../colorui/icon.wxss";
@import "../colorui/main.wxss";
page{
  padding-bottom: 150rpx;
}
.shadow{
  box-shadow: 0 -1rpx 6rpx rgba(0, 0, 0, 1);
}
.bg-white {
  background-color: #ffffff;
  color: #AAAAAA;
  
}
.text-blue{
  color: #76aaeb;
}
.text-gray{
  color: #AAAAAA;
  font-size: 22rpx;
}
.pos-bottom {
 
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.active{
 animation: scale-up 0.2s ease-in-out ;
}
@keyframes scale-up {
  from {
    /* left: 0px; */
	/* transform: rotate(7deg) skew(50deg) translate(30rpx,30rpx); */
	transform: scale(0)
  }

  to {
   /* left: 200px; */
	/* transform: rotate(7deg) skew(5deg) translate(100rpx,100rpx); */
	transform: scale(1.2)
  }
}


