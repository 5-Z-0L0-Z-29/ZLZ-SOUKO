<!--pages/index/index.wxml-->
<cu-custom bgColor="bg-blue light" isBack="{{false}}">
	<!-- <view slot="backText">返回</view> -->
	<view slot="content">三院科协-签到</view>
</cu-custom>
<view class="nav bg-green shadow">
<view class="Icon ">
  <text class="cuIcon-roundcheckfill lg text-white "></text>
</view>
<view class="content">
<view style="font-size: 36rpx;font-weight: bold;">已签到</view>
<view style="font-size: 32rpx;">学号：{{user.userId}}</view>
<view style="font-size: 32rpx;">姓名：{{user.userName}}</view>
<view style="font-size: 32rpx;">周序：{{user.week}}</view>
</view>
</view>
<view  class="kuang">
  <text  class="text-grey">输入学号</text>
    <input value="{{previousSno}}"  bindinput="getSno" class="in" type="text" />
  </view>
  <button bindtap="signIn" style="width: 20%; margin: 25rpx;"class="cu-btn round line-blue " disabled>签到</button>
  <button bindtap="signOut" style="width: 20%;"  class="cu-btn round line-black button-hover ">签退</button>
<view style="position:relative;" class="padding-xl radius shadow-warp bg-white margin">
 <view class="title">
 <text style="font-size: 36rpx; font-weight: bold;">当前在教室人数：{{Onlines.length}}</text>
 <view class="search solid-bottom ">
 <input  value="{{In}}" bindinput="search" bindfocus="search"  class="search_input" type="text" placeholder="请输入要查找的姓名" />
 <text class="cuIcon-search"></text>
 </view>
 </view>
 <scroll-view scroll-x  enable-flex  style=" width:100%;margin-top: 25rpx;">
 <view class="head">
<view class="h_item" wx:for="{{tags}}" wx:key="index">
 {{item.name}}
 </view>
 </view>
 <view class="h_body">
<block wx:if="{{curList.length>0}}" >
<view  class="b_item" wx:for="{{curList}}" wx:key="index">
<view class="b_item_id" >{{item.userId}}</view>
<view class="b_item_name">{{item.userName}}</view>
<view class="b_item_dept">{{item.userDept}}</view>
<view class="b_item_location">{{item.userLocation}}</view>
 <button bindtap="handleReport" data-id="{{index}}" style="margin-left: 20rpx;width: 15%;box-shadow: 0 3px 1px -2px rgb(0 0 0 / 20%), 0 2px 2px 0 rgb(0 0 0 / 14%), 0 1px 5px 0 rgb(0 0 0 / 12%);" class="cu-btn  bg-gray  button-hover ">举报</button>
</view>
</block> 
<block wx:else>
<view style="margin-left: 50rpx; margin-top: 50rpx;font-size: 38rpx;" class="text-grey">No matching records found</view>
</block>
</view>
 </scroll-view>
  <view class="card_bottom">
   <text style="width: auto;" >Rows per page:</text>
  <view class="selectCount" bindtap="showList"> 
    <text wx:if="{{value==20}}">All</text>
    <text wx:else>{{pagesize}}</text>
    <view style="font-size: 38rpx;{{select?'transform:rotate(-180deg);transition: 0.2s ease-in;':'transform:rotate(0deg);transition: 0.2s ease-out;'}}" class="cuIcon-triangleupfill lg text-gray"></view>
  </view>
  <view class="curnum">
  <text wx:if="{{value==20}}">{{curpage+1}}-{{Onlines.length}} of {{Onlines.length}}</text>
  <text wx:else>{{curpage+1}}-{{count}} of {{Onlines.length}}</text>
  </view>
  <view class="arrow"> 
   <view   bindtap="back" class="cuIcon-back lg text-gray  "></view>
   <view bindtap="forward" style="margin-left: 25rpx;" class="cuIcon-right lg text-gray"></view>
  </view>
  </view>
 <view class="select_box bg-white"wx:if="{{select!==0}}">
<view wx:for="{{option}}" class="select_one {{value==item.value?'bg-blue light' :''}}" bindtap="mySelect" data-id="{{index}}">{{item.text}}</view>
</view>
  </view>
